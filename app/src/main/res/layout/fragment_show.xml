<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    tools:context=".screens.MoviesFragment"
    android:scrollbars="none"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".screens.MoviesFragment">

    <TextView
        android:id="@+id/new_realease_shows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/new_release"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
      />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_movies_fragment_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal" />

        <TextView
        android:id="@+id/coming_soon_text_shows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/coming_soon"
       android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
      android:layout_marginStart="20dp"
        android:orientation="horizontal"
/>
    </LinearLayout>
</ScrollView>